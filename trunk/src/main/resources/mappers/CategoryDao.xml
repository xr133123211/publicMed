<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pubmed.medicine.dao.CategoryDao">

    <select id="getCategories" resultType="User">
        SELECT * from type_value where id!=0
    </select>

    <select id="getAllCategories" resultType="User">
        SELECT * from type_value
    </select>

    
    <insert id="insert" parameterType="Auth">
        INSERT into type_value
        (name,expertName)
        VALUES (#{name},#{expertName})
    </insert>
    
    <update id="update" parameterType="Auth">
        update type_value set
        name = #{name},
        expertName = #{expertName}
        where id = #{id}
    </update>

</mapper>